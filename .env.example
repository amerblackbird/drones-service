# Admin Service Configuration

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
API_PREFIX=/api/v1

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=admin_service
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# NATS Configuration
NATS_SUBJECT_DRONES_EVENTS=drones.events
NATS_SUBJECT_ORDERS_EVENTS=orders.events
NATS_SUBJECT_USERS_EVENTS=users.events
NATS_SUBJECT_LOG_ACTIVITY_EVENTS=log_activity.events
NATS_QUEUE_GROUP=admin-service-group
NATS_SERVERS=nats://nats:4222
NATS_URL=nats://nats:4222

# JWT Configuration
AUTH_JWT_SECRET=change_this_to_a_random_secret_key_at_least_32_characters_long
AUTH_JWT_EXPIRES_IN=24h

# API Documentation
DOCS_ENABLED=true
DOCS_TITLE=Drones Service API
DOCS_VERSION=1.0.0
DOCS_API_VERSION=v1
DOCS_DESCRIPTION=This is the API documentation for the Drones Service.

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Monitoring
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=30s
